@using WebDemo.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<tDanhMucSP>
@{
    ViewBag.Title = "Home Page";
}
<div style="float: left; width: 100%">
    @{
        int i = 0;
        foreach (var item in Model)
        {
            i++;
            <div id="SanPham">
                <a href="@Url.Action("XemChiTiet", "Home", new {@MaSP = item.MaSP})">
                    <div id="HinhAnh">
                        <img src="@Url.Content("~/Images/" + item.Anh)" width="100" height="150" />
                    </div>
                </a>
                <div id="" ThongTin>
                    <div title="@item.TenSP">@item.TenSP</div>
                </div>
            </div>
            if (i % 6 == 0)
            {
                <div style="clear: both"></div>
            }
        }
    }
</div>
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>


<style>
    #SanPham {
        float: left;
        width: 180px;
        margin-left: 3%;
        margin-top: 5px;
    }

    #HinhAnh {
        width: 150px;
        height: 150px;
        padding-top: 0px;
        padding-bottom: 0px;
    }

    #ThongTin {
        padding-top: 0px;
        padding-bottom: 5px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 14pt;
        font-weight: 200;
    }

    .MenuTrang li {
        display: inline;
    }
</style>